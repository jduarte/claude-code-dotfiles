{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://salsify.com/glossary.schema.json",
  "title": "Salsify Glossary",
  "description": "Schema for Salsify company glossary with acronyms and terms",
  "type": "object",
  "required": ["terms"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "terms": {
      "type": "array",
      "description": "Array of glossary terms",
      "items": {
        "$ref": "#/definitions/term"
      },
      "minItems": 0,
      "uniqueItems": true
    }
  },
  "definitions": {
    "term": {
      "type": "object",
      "description": "A glossary term entry",
      "required": ["acronym", "name", "category"],
      "additionalProperties": false,
      "properties": {
        "acronym": {
          "type": "string",
          "description": "The acronym or short form (e.g., 'TSR', 'API')",
          "minLength": 1,
          "maxLength": 50,
          "examples": ["TSR", "API", "PIM"]
        },
        "name": {
          "type": "string",
          "description": "Full expansion of the acronym",
          "minLength": 1,
          "maxLength": 200,
          "examples": ["Technical Sales Representative", "Application Programming Interface"]
        },
        "description": {
          "type": "string",
          "description": "Detailed explanation of the term",
          "maxLength": 2000,
          "examples": ["Field sales role focused on technical product demonstrations and customer solutions"]
        },
        "category": {
          "type": "string",
          "description": "Category tag for grouping terms",
          "minLength": 1,
          "maxLength": 50,
          "examples": ["Sales", "Engineering", "Product", "Finance"]
        },
        "owner": {
          "type": "string",
          "description": "Team or person responsible for this term",
          "maxLength": 100,
          "examples": ["Sales Team", "Engineering", "Platform Team"]
        },
        "relatedTerms": {
          "type": "array",
          "description": "List of related acronyms",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true,
          "examples": [["AE", "SE", "SDR"]]
        },
        "links": {
          "type": "array",
          "description": "External documentation links",
          "items": {
            "$ref": "#/definitions/link"
          }
        }
      }
    },
    "link": {
      "type": "object",
      "description": "An external documentation link",
      "required": ["url", "description"],
      "additionalProperties": false,
      "properties": {
        "url": {
          "type": "string",
          "description": "URL to the resource",
          "format": "uri",
          "examples": ["https://wiki.salsify.com/term-page"]
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of the link",
          "minLength": 1,
          "maxLength": 200,
          "examples": ["Wiki Page", "Confluence Documentation", "Runbook"]
        }
      }
    }
  }
}
